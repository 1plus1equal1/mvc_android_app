<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.hnxtay.android_tutorial">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android_tutorial">
        <activity
            android:name=".ui.dashboard.DetailsActivity"
            android:exported="false" />
        <activity
            android:name="dev.hnxtay.android_tutorial.ui.authenticate.signup.SignUpActivity"
            android:exported="false" />

        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.authenticate.AuthenticationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.dashboard.MainActivity"
            android:exported="true" />
    </application>

</manifest>